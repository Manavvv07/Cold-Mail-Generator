{
  "name": "outreach-ai",
  "version": "1.0.0",
  "description": "AI-powered cold email generator that extracts job data and creates personalized emails",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt && python -m playwright install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nodejs",
    "express",
    "react",
    "api",
    "cold-email",
    "job-application",
    "ai",
    "groq"
  ],
  "author": "OutReach AI Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}